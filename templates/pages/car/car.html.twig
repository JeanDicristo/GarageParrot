{% extends 'base.html.twig' %}

{% block title %}Hello CarController!
{% endblock %}

{% block body %}
	<h1>Voiture d'occasion</h1>
<div class="d-flex justify-content-end">
    <a href="{{ path('newCar')}}" class="btn btn-create">Créer une offre</a>
</div>
	<div class="offres">
		{% for car in cars %}
			<div class="card card_car" style="width: 18rem;">
				<a href="{{ path('car_detail', { 'id': car.id }) }}">
					<img src="{{ vich_uploader_asset(car, 'imageFile') }}" alt="" class="img-photo" width="300px">
					<div class="card-body">
						<h5 class="card-title">{{ car.name }}</h5>
						<p class="card-text">Prix:
							{{ car.price }}€</p>
						<p class="card-text">Année:
							{{ car.year }}</p>
						<a href="{{ path('car_detail', { 'id': car.id }) }}" class="btn btn-warning">Afficher plus</a>
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
